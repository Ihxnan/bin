#!/usr/bin/bash

# 检查manjaro虚拟机的状态
STATUS=$(sudo virsh list --all | grep manjaro | awk '{print $3}')

# 如果虚拟机未运行，则启动它
if [ "$STATUS" != "running" ]; then
    echo "Manjaro is not running, starting it now..."
    sudo virsh start manjaro
    
    # 等待虚拟机启动
    echo "Waiting for Manjaro to start up..."
    sleep 30  # 可根据实际启动时间调整
fi

# 连接到虚拟机
echo "Connecting to Manjaro via SSH..."
ssh ihxnan@192.168.122.114

